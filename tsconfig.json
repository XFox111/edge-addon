{
  "compilerOptions": {
    // Environment and module options.
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "lib": [
      "ES2022"
    ],
    // Completeness and emit options.
    "removeComments": true,
    "newLine": "lf",
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    // Type checking options.
    "strict": true,
    "alwaysStrict": true
  },
  "include": [
    "index.ts"
  ]
}
