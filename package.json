{
  "name": "edge-addon",
  "version": "1.1.0",
  "description": "Publish addon to Microsoft Edge Add-ons.",
  "author": "hyperbola",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wdzeng/edge-addon"
  },
  "packageManager": "pnpm@8.7.0",
  "scripts": {
    "build": "pnpm clean && pnpm transpile && cp action.yml dist",
    "transpile": "esbuild src/index.ts --target=node16 --platform=node --minify --bundle --outfile=dist/index.cjs",
    "clean": "rm -rf dist",
    "lint": "eslint --fix index.ts"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "@types/node": "^16.18.31",
    "esbuild": "^0.19.2",
    "eslint": "^8.48.0",
    "eslint-config-wdzeng": "github:wdzeng/eslint-config#semver:^0.4.4",
    "prettier": "^3.0.2",
    "typescript": "^5.2.2"
  },
  "license": "MIT"
}
